{
  "name": "checklist-pwa",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\" \"*.{ts,tsx,js,jsx,json,md}\" \".storybook/**/*.{ts,tsx,js,jsx,json}\" \"docs/**/*.md\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\" \"*.{ts,tsx,js,jsx,json,md}\" \".storybook/**/*.{ts,tsx,js,jsx,json}\" \"docs/**/*.md\"",
    "type-check": "tsc --noEmit",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:install": "playwright install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lighthouse": "lhci autorun",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test:coverage && npm run knip",
    "validate:fix": "npm run lint:fix && npm run format && npm run knip:fix",
    "prepare": "husky install",
    "find-duplicates": "jscpd"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix",
    "*.{ts,tsx,js,jsx,json,css,md}": "prettier --write"
  },
  "jscpd": {
    "threshold": 5,
    "reporters": [
      "html",
      "console"
    ],
    "absolute": true,
    "paths": [
      "src"
    ],
    "ignore": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/*.test.ts",
      "src/test/**"
    ],
    "min-tokens": 50,
    "glob-options": {
      "ignore": [
        "**/node_modules/**"
      ]
    }
  },
  "dependencies": {
    "@tanstack/query-sync-storage-persister": "^5.76.0",
    "@tanstack/react-query": "^5.76.0",
    "@tanstack/react-query-devtools": "^5.76.0",
    "@tanstack/react-query-persist-client": "^5.76.0",
    "immer": "^10.1.1",
    "lucide-react": "^0.523.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-router": "^7.6.2",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.47.2",
    "@storybook/addon-a11y": "^8.4.0",
    "@storybook/addon-essentials": "^8.4.0",
    "@storybook/addon-interactions": "^8.4.0",
    "@storybook/addon-viewport": "^8.4.0",
    "@storybook/react-vite": "^8.4.0",
    "@storybook/test": "^8.4.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^24.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.21",
    "chromatic": "^11.20.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^0.11.1",
    "globals": "^16.2.0",
    "husky": "^8.0.0",
    "jsdom": "^25.0.1",
    "knip": "^5.61.2",
    "lint-staged": "^16.1.2",
    "msw": "^2.6.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.1",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "storybook": "^8.4.0",
    "tailwindcss": "^4.1.10",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^5.4.19",
    "vite-plugin-pwa": "^0.20.5",
    "vitest": "^1.6.0",
    "workbox-window": "^7.3.0"
  }
}
