{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000",
        "http://localhost:3000/auth/login",
        "http://localhost:3000/checklists",
        "http://localhost:3000/dashboard"
      ],
      "startServerCommand": "npm run preview",
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-gpu --headless",
        "preset": "desktop",
        "onlyCategories": ["performance", "accessibility", "best-practices", "pwa"],
        "skipAudits": ["uses-http2"]
      }
    },
    "assert": {
      "assertions": {
        "first-contentful-paint": ["error", { "maxNumericValue": 800 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 1200 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.05 }],
        "speed-index": ["error", { "maxNumericValue": 1300 }],
        "interactive": ["error", { "maxNumericValue": 2000 }],
        "total-blocking-time": ["error", { "maxNumericValue": 150 }],

        "uses-responsive-images": "off",
        "unused-css-rules": "warn",
        "unused-javascript": "warn",
        "modern-image-formats": "warn",
        "offscreen-images": "warn",
        "render-blocking-resources": ["error", { "maxNumericValue": 500 }],
        "unminified-css": "error",
        "unminified-javascript": "error",
        "efficient-animated-content": "warn",
        "legacy-javascript": "warn",

        "color-contrast": "error",
        "heading-order": "error",
        "label": "error",
        "link-name": "error",
        "list": "error",
        "meta-viewport": "error",
        "button-name": "error",
        "image-alt": "error",
        "input-image-alt": "error",
        "frame-title": "error",
        "duplicate-id-aria": "error",
        "aria-allowed-attr": "error",
        "aria-required-attr": "error",
        "aria-roles": "error",
        "aria-valid-attr": "error",
        "aria-valid-attr-value": "error",
        "valid-lang": "error",
        "definition-list": "error",
        "dlitem": "error",
        "document-title": "error",
        "html-has-lang": "error",
        "html-lang-valid": "error",
        "landmark-one-main": "error",
        "listitem": "error",
        "tabindex": "error",
        "td-headers-attr": "error",
        "th-has-data-cells": "error",

        "installable-manifest": "error",
        "service-worker": "error",
        "offline-start-url": "error",
        "themed-omnibox": "error",
        "content-width": "error",
        "viewport": "error",
        "without-javascript": "error",
        "apple-touch-icon": "warn",
        "splash-screen": "warn",
        "maskable-icon": "warn",

        "is-on-https": "error",
        "uses-http2": "off",
        "no-vulnerable-libraries": "error",
        "csp-xss": "warn",

        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["error", { "minScore": 0.9 }],
        "categories:pwa": ["error", { "minScore": 0.9 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
